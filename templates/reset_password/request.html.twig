{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container mt-5 d-flex justify-content-center">
        <div class="text-center" style="max-width: 400px;">
            <h1>Réinitialisez votre mot de passe</h1>

            {{ form_start(requestForm) }}

            <div class="row align-items-center mb-3">
                <div class="col-auto">
                    {{ form_label(requestForm.email, 'Adresse e-mail') }}
                </div>
                <div class="col">
                    {{ form_widget(requestForm.email, {'attr': {'placeholder': 'Entrez votre adresse e-mail'}}) }}
                </div>
            </div>

            <div class="mb-3">
                <small class="text-muted">
                    Entrez votre adresse e-mail, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                </small>
            </div>

            <button class="btn btn-primary">Envoyer l'e-mail de réinitialisation</button>

            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
