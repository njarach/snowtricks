<div class="row">
    {% for trick in tricks %}
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">{{ trick.name }}</h5>
                        <div>
                            <a href="{{ path('app_trick_edit', { id: trick.id }) }}" class="text-primary" title="Edit">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="{{ path('app_trick_delete', { id: trick.id }) }}" class="text-danger" title="Delete" data-confirm="Are you sure you want to delete this trick?">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p class="card-text">{{ trick.description }}</p>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

