{% extends 'base.html.twig' %}

{% block title %}{{ trick.name }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <!-- Trick Name and Group -->
        <div class="text-center">
            <h1>{{ trick.name }}</h1>
            <p class="text-muted">Group: {{ trick.group }}</p>
        </div>

        <!-- Description Section -->
        <div class="my-4">
            <p>{{ trick.description }}</p>
        </div>

        <!-- Image Carousel -->
        <div id="imageCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
            <div class="carousel-inner">
                {% for image in trick.images %}
                    <div class="carousel-item {% if loop.first %}active{% endif %}">
                        <img src="{{ image.url }}" class="d-block w-100" alt="{{ image.alt }}">
                    </div>
                {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#imageCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#imageCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <!-- Video Carousel -->
        <div id="videoCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
            <div class="carousel-inner">
                {% for video in trick.videos %}
                    <div class="carousel-item {% if loop.first %}active{% endif %}">
                        <div class="ratio ratio-16x9">
                            <iframe src="{{ video.url }}" title="{{ video.title }}" allowfullscreen></iframe>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#videoCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#videoCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <!-- Navigation Buttons -->
        <div class="d-flex justify-content-between mb-4">
            <a href="{{ path('trick_list') }}" class="btn btn-outline-secondary">Back to List</a>
            <a href="{{ path('trick_show', {'id': nextTrick.id}) }}" class="btn btn-primary">Next Trick</a>
        </div>

        <!-- Comments Section -->
        <div class="mb-5">
            <h3>Comments</h3>
            {% if trick.messages is empty %}
                <p>No messages yet. Be the first to message!</p>
            {% else %}
                <ul class="list-unstyled">
                    {% for message in trick.messages %}
                        <li class="mb-3">
                            <strong>{{ message.user }}</strong> - <small class="text-muted">{{ message.createdAt|date('F j, Y, g:i a') }}</small>
                            <p>{{ message.content }}</p>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}

            <!-- Add a New Comment Form -->
            <form method="post" action="{{ path('message_add', {'trick_id': trick.id}) }}">
                <div class="mb-3">
                    <label for="messageContent" class="form-label">Add a message</label>
                    <textarea class="form-control" id="messageContent" name="message_content" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit Comment</button>
            </form>
        </div>
    </div>
{% endblock %}